[module/date]
type = internal/date
interval = 5

date-alt = " %d - %m - %Y"

time = %H:%M
time-alt = %H:%M

format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/volume]
